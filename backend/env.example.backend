# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5001

# Firebase Configuration
# Your Firebase service account key file should be placed in the backend/ directory
# The filename should match what's referenced in backend/firebase.js
# Default: promptifyai-6j2zl-firebase-adminsdk-fbsvc-d667afb62b.json
# FIREBASE_PROJECT_ID=your_project_id

# X/Twitter OAuth Configuration
# Get credentials from: https://developer.twitter.com/en/portal/dashboard
X_CLIENT_ID=your_x_client_id_here
X_CLIENT_SECRET=your_x_client_secret_here
X_REDIRECT_URI=http://localhost:5001/api/auth/x/callback
# For production, use: https://yourdomain.com/api/auth/x/callback

# Facebook OAuth Configuration
# Get credentials from: https://developers.facebook.com/
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here
FACEBOOK_REDIRECT_URI=http://localhost:5001/api/auth/facebook/callback
# For production, use: https://yourdomain.com/api/auth/facebook/callback

# LinkedIn OAuth Configuration
# Get credentials from: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:5001/api/auth/linkedin/callback
# For production, use: https://yourdomain.com/api/auth/linkedin/callback

# Pinterest OAuth Configuration
# Get credentials from: https://developers.pinterest.com/
PINTEREST_CLIENT_ID=your_pinterest_client_id_here
PINTEREST_CLIENT_SECRET=your_pinterest_client_secret_here
PINTEREST_REDIRECT_URI=http://localhost:5001/api/auth/pinterest/callback
# For production, use: https://yourdomain.com/api/auth/pinterest/callback

# Stripe Payment Configuration (Optional)
# Get credentials from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Instagram OAuth Configuration
# Uses same Facebook app, but separate redirect URI
# Get credentials from: https://developers.facebook.com/
INSTAGRAM_CLIENT_ID=your_instagram_client_id_here
# Or use FACEBOOK_CLIENT_ID if using same app
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret_here
# Or use FACEBOOK_CLIENT_SECRET if using same app
INSTAGRAM_REDIRECT_URI=http://localhost:5001/api/auth/instagram/callback
# For production, use: https://yourdomain.com/api/auth/instagram/callback

# YouTube OAuth Configuration
# Get credentials from: https://console.cloud.google.com/
# Create OAuth 2.0 credentials and enable YouTube Data API v3
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:5001/api/auth/youtube/callback
# For production, use: https://yourdomain.com/api/auth/youtube/callback

# TikTok OAuth Configuration
# Get credentials from: https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here
TIKTOK_REDIRECT_URI=http://localhost:5001/api/auth/tiktok/callback
# For production, use: https://yourdomain.com/api/auth/tiktok/callback

# Threads OAuth Configuration
# Uses same Facebook app, but separate redirect URI
# Get credentials from: https://developers.facebook.com/
THREADS_CLIENT_ID=your_threads_client_id_here
# Or use FACEBOOK_CLIENT_ID if using same app
THREADS_CLIENT_SECRET=your_threads_client_secret_here
# Or use FACEBOOK_CLIENT_SECRET if using same app
THREADS_REDIRECT_URI=http://localhost:5001/api/auth/threads/callback
# For production, use: https://yourdomain.com/api/auth/threads/callback

# Bluesky Configuration
# Bluesky uses AT Protocol, not traditional OAuth
# Users will need to provide their handle and app password
BLUESKY_SERVICE_URL=https://bsky.social
# Note: Bluesky requires app password authentication, not OAuth

# Snapchat OAuth Configuration
# Get credentials from: https://developers.snapchat.com/
SNAPCHAT_CLIENT_ID=your_snapchat_client_id_here
SNAPCHAT_CLIENT_SECRET=your_snapchat_client_secret_here
SNAPCHAT_REDIRECT_URI=http://localhost:5001/api/auth/snapchat/callback
# For production, use: https://yourdomain.com/api/auth/snapchat/callback

# Email Service Configuration (Optional - for contact form)
# You can use SendGrid, Mailgun, AWS SES, or any other email service
EMAIL_SERVICE_URL=your_email_service_url_here
EMAIL_API_KEY=your_email_api_key_here
CONTACT_EMAIL=support@omnipost.ai

